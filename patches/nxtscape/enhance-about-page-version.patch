diff --git a/chrome/browser/resources/settings/about_page/about_page.ts b/chrome/browser/resources/settings/about_page/about_page.ts
index def4567890123..9876543210def 100644
--- a/chrome/browser/resources/settings/about_page/about_page.ts
+++ b/chrome/browser/resources/settings/about_page/about_page.ts
@@ -50,6 +50,17 @@ export interface LifetimeBrowserProxy {
   relaunch(): void;
 }
 
+interface BrowserOSVersionInfo {
+  version: string;
+  chromiumVersion: string;
+  buildDate: string;
+  architecture: string;
+  platform: string;
+  userAgent: string;
+  gitCommit?: string;
+  buildType?: string;
+}
+
 export class LifetimeBrowserProxyImpl implements LifetimeBrowserProxy {
   restart() {
     chrome.send('restart');
@@ -80,6 +91,11 @@ export class SettingsAboutPageElement extends PolymerElement {
       hasEndOfLife: {
         type: Boolean,
       },
+      
+      browserOSVersionInfo_: {
+        type: Object,
+        value: () => ({}),
+      },
     };
   }
 
@@ -87,6 +103,7 @@ export class SettingsAboutPageElement extends PolymerElement {
   private aboutBrowserProxy_: AboutPageBrowserProxy;
   private lifetimeBrowserProxy_: LifetimeBrowserProxy;
   private hasEndOfLife: boolean;
+  private browserOSVersionInfo_: BrowserOSVersionInfo;
 
   constructor() {
     super();
@@ -95,9 +112,34 @@ export class SettingsAboutPageElement extends PolymerElement {
     this.lifetimeBrowserProxy_ = LifetimeBrowserProxyImpl.getInstance();
   }
 
+  override ready() {
+    super.ready();
+    this.getBrowserOSVersionInfo_();
+  }
+
   private onRelaunchClick_() {
     this.lifetimeBrowserProxy_.relaunch();
   }
+
+  private getBrowserOSVersionInfo_() {
+    // Gather BrowserOS-specific version information
+    this.browserOSVersionInfo_ = {
+      version: '1.0.35', // This should be dynamically loaded
+      chromiumVersion: '137.0.7151.104', // This should be dynamically loaded  
+      buildDate: new Date().toLocaleDateString(),
+      architecture: this.getArchitecture_(),
+      platform: navigator.platform,
+      userAgent: navigator.userAgent,
+    };
+  }
+
+  private getArchitecture_(): string {
+    const ua = navigator.userAgent;
+    if (ua.includes('ARM64') || ua.includes('aarch64')) return 'ARM64';
+    if (ua.includes('x86_64') || ua.includes('WOW64')) return 'x64';
+    if (ua.includes('i386') || ua.includes('i686')) return 'x86';
+    return 'Unknown';
+  }
+
+  private onCopyBrowserOSVersionInfo_() {
+    const info = this.browserOSVersionInfo_;
+    const versionText = `BrowserOS ${info.version}\nChromium ${info.chromiumVersion}\nBuild: ${info.buildDate}\nArchitecture: ${info.architecture}\nPlatform: ${info.platform}`;
+    
+    navigator.clipboard.writeText(versionText).then(() => {
+      // Show success toast or feedback
+      console.log('Version information copied to clipboard');
+    });
+  }
+
+  private onOpenGitHubRepo_() {
+    window.open('https://github.com/nxtscape/nxtscape', '_blank');
+  }
 }
 

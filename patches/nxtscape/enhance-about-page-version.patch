+      
+      <div class="version-details-grid">
+        <div class="version-detail-item">
+          <div class="version-detail-label">BrowserOS Version</div>
+          <div class="version-detail-value">[[browserOSVersionInfo_.version]]</div>
+        </div>
+        <div class="version-detail-item">
+          <div class="version-detail-label">Chromium Version</div>
+          <div class="version-detail-value">[[browserOSVersionInfo_.chromiumVersion]]</div>
+        </div>
+        <div class="version-detail-item">
+          <div class="version-detail-label">Build Date</div>
+          <div class="version-detail-value">[[browserOSVersionInfo_.buildDate]]</div>
+        </div>
+        <div class="version-detail-item">
+          <div class="version-detail-label">Architecture</div>
+          <div class="version-detail-value">[[browserOSVersionInfo_.architecture]]</div>
+        </div>
+        <div class="version-detail-item">
+          <div class="version-detail-label">Platform</div>
+          <div class="version-detail-value">[[browserOSVersionInfo_.platform]]</div>
+        </div>
+        <div class="version-detail-item">
+          <div class="version-detail-label">User Agent</div>
